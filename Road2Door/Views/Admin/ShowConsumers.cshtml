@functions {
    public string HighlightText(string text, string searchText)
    {
        if (!string.IsNullOrEmpty(searchText))
        {
            return text.Replace(searchText, "<span class='highlight'>" + searchText + "</span>", StringComparison.OrdinalIgnoreCase);
        }
        return text;
    }
}
