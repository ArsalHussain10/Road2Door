<script>
    $(document).ready(function () {
        $('#searchInput').on('input', function () {
            var searchText = $(this).val().toLowerCase();
                $('.info_people').each(function () {
                var riderName = $(this).find('.name').text().toLowerCase();
                var originalText = $(this).find('.name').data('original-text');
                if (originalText === undefined) {
                    $(this).find('.name').data('original-text', riderName);
                    originalText = riderName;
                }
                if (riderName.includes(searchText)) {
                    $(this).show();
                    var highlightedText = originalText.replace(new RegExp(searchText, 'gi'), function (match) {
                        return '<span class="highlight">' + match + '</span>';
                    });
                    $(this).find('.name').html(highlightedText);
                } else {
                    $(this).hide();
                    $(this).find('.name').html(originalText);
                }
            });
        });
    });

        function showDocumentModal(license) {
                console.log("here in liscence func");
            var imageUrl = license;
            console.log(imageUrl);
            document.getElementById("documentModal").style.display = "block";
            document.getElementById("documentImage").src = imageUrl;
        }

        function hideLicenseModal() {
            document.getElementById("documentModal").style.display = "none";
        }
        function toggleAccountStatus(riderId, accountStatus) {

            if (accountStatus === "1") {
                confirmationMessage = "Are you sure you want to deactivate  this account?";
                accountStatus = "0";
            } else {
                confirmationMessage = "Are you sure you want to activate this account?";
                accountStatus = "1"
            }
            if (confirm(confirmationMessage)) {
                window.location.href = "/Admin/ChangeAccountStatusRider?riderId=" + riderId + "&accountStatus=" + accountStatus;

            }



        }
</script>
