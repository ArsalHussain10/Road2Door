<html>


<head>
   
    <link href="/css/consumer/signup.css" rel="stylesheet" />

       <link rel="preconnect" href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>


<body>
    <div id="displayViewBag">

        <h3 style="color:red">@ViewBag.accountError</h3>
    </div>
    <div class="container mt-5 mb-6">
        @*        <img src="/assets/img/delivery.gif" alt="Image" class="riderConsumerGif" />
        *@
        <div class="row d-flex align-items-center justify-content-center">

            <div class="col-md-5">

                <div class="card px-5 py-5">
                    <h2 class="text-center">Consumer SignUp</h2>

                    <form method="post" asp-controller="Consumer" asp-action="SignUp">
                        <div class="form-input">

                            <i class="fa fa-user"></i>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>

                        </div>

                        <div class="form-input">

                            <i class="fa fa-envelope"></i>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email address" required>

                        </div>

                        <div class="form-input">

                            <i class="fa fa-lock"></i>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>

                        </div>

                        <div class="form-input">

                            <i class="fa fa-phone"></i>
                            <input type="number" class="form-control" name="phoneNumber" id="phone" placeholder="Phone Number" required>

                        </div>

                        <button class="mx-auto btn rounded-pill btn-warning mt-4 signup">Sign Up</button>

                    </form>
                    <div class="text-center mt-4">

                        <span>Already Have an Account?</span>
                        <a href="@Url.Action("SignIn", "Consumer")" class="text-decoration-none text-warning">Sign In</a>

                    </div>

                </div>

            </div>

        </div>

    </div>
</body>

</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        var displayElement = $("#displayViewBag");

        // Show the value for 3 seconds
        setTimeout(function () {
            displayElement.fadeOut(1000); // 1000 milliseconds = 1 second
        }, 3000); // 3000 milliseconds = 3 seconds
    });
</script>