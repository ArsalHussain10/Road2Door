@model List<ConsumerOrder>

@{
    int menuNumber = 1;
    int i = 0;
    int count = 1;
    double totalAmount = 0;

}

<div class="table_section padding_infor_info">
    <div class="table-responsive-sm">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order#</th>
                    <th>RiderName</th>
                    <th>Order Details</th>
                    <th>Total Amount</th>

                </tr>
            </thead>
            <tbody>
                @foreach (ConsumerOrder singleOrder in Model)
                {

                    <tr>
                        <td>@menuNumber</td>
                        <td>@singleOrder.Rider.Name</td>

                        <td>
                            @foreach (var orderDetail in singleOrder.OrderDetails)
                            {
                                <li>@orderDetail.Item.Name  Qty<strong>(@orderDetail.Quantity)</strong> @orderDetail.Item.Price</li>
                                totalAmount += orderDetail.Item.Price * orderDetail.Quantity;
                            }
                        </td>

                        <td>@totalAmount</td>

                    </tr>

                    totalAmount = 0;

                    menuNumber++;
                }
            </tbody>
        </table>
        <a asp-controller="Consumer" asp-action="HomePage" class="btn btn-primary" >Back to Home Page</a>
    </div>
</div>
