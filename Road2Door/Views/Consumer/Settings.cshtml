@{
}
@model Consumer


<!DOCTYPE html>
<html>
<head>

    <script src="/js/consumer/settings.js"></script>
    <link href="/css/consumer/settings.css" rel="stylesheet" />

    

    <title>Settings</title>
</head>
<body>
    <h1>Settings</h1>

    <div class="section">
        <h2>General Settings</h2>
        <div class="field">
            <label for="id">Id</label>
            <input type="text" id="consumer-id" name="id" readonly value="@Model.Id">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="@Model.Name">
            <label for="email">Email</label>
            <input type="text" readonly id="email" name="email" value="@Model.Email">

            <label for="password">Password</label>
            <input type="password" id="password" readonly  name="password" value="@Model.Password">
        </div>
        <div class="field">
            <label for="contact">Contact</label>
            <input type="text" id="contact" name="contact" value="@Model.Phone">
        </div>
    </div>



    <input type="submit"  onclick="save()" id="save-changes" value="Save Changes">

</body>
</html>
